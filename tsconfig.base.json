{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["es2024", "DOM"],
    "skipLibCheck": true,
    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
}
